<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Lottie Loading with Card Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loadingCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardCornerRadius="70dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingAnimation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="loading.json" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Profile Image with Gradient Background -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_orang"
                        android:background="@drawable/gradient_profile_bg" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Faqih Hidayatullah"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@contoh.com"
                        android:textSize="14sp"
                        android:textColor="#718096"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="6dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Pengaturan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="16dp" />

                <!-- Edit Profile -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F7FAFC">

                    <LinearLayout
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit_profile"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/purple_500" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edit Profil"
                            android:textColor="#2D3748"
                            android:textSize="16sp"
                            android:textStyle="" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#A0AEC0" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Pesanan Saya -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F7FAFC">

                    <LinearLayout
                        android:id="@+id/btnPesananSaya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_shopping_bag"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/purple_500" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pesanan Saya"
                            android:textColor="#2D3748"
                            android:textSize="16sp"
                            android:textStyle="" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#A0AEC0" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Kontak Kami -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F7FAFC">

                    <LinearLayout
                        android:id="@+id/btnKontakKami"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_contact_support"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/purple_500" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kontak Kami"
                            android:textColor="#2D3748"
                            android:textSize="16sp"
                            android:textStyle="" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#A0AEC0" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Ubah Password -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F7FAFC">

                    <LinearLayout
                        android:id="@+id/btnUbahPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/purple_500" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ubah Password"
                            android:textColor="#2D3748"
                            android:textSize="16sp"
                            android:textStyle="" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#A0AEC0" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="🚪 Keluar"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="16dp"
            android:backgroundTint="#EF4444"
            android:textColor="@android:color/white"
            app:elevation="6dp"
            app:rippleColor="#FCA5A5"
            app:icon="@drawable/ic_logout"
            app:iconTint="@android:color/white" />

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>